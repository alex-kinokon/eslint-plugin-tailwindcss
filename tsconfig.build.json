{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rewriteRelativeImportExtensions": true,
    "noEmit": false,
    "outDir": "lib",
    "skipLibCheck": true
  },
  "include": ["src"]
}
